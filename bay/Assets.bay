namespace Runtime.Widget;

use Runtime.BaseObject;
use Runtime.SerializeInterface;
use Runtime.Serializer.ObjectType;
use Runtime.Serializer.MapType;
use Runtime.Serializer.StringType;


class Assets extends BaseObject implements SerializeInterface
{
	Map<string> path = {};
	
	
	/**
	 * Serialize object
	 */
	static void serialize(ObjectType rules)
	{
		parent(rules);
		rules.addType("path", new MapType(new StringType()));
	}
	
	
	/**
	 * Returns path
	 */
	string get(string library, string path)
	{
		string library_path = this.path.get(library, "");
		return rs::join("/", [library_path, path]);
	}
	
	
	/**
	 * Register library
	 */
	void register(string library, string path)
	{
		this.path.set(library, path);
	}
}