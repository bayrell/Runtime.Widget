namespace Runtime.Widget.WidgetConstructor.Settings;

use BayLang.Constructor.Frontend.Annotations.WidgetSettingsInterface;
use BayLang.Constructor.Frontend.Editor.Parameter;
use BayLang.Constructor.Frontend.Editor.ParameterComponent;


class TextSettings implements WidgetSettingsInterface
{
	/**
	 * Returns widgets list
	 */
	string getName() => "Runtime.Widget.Text";
	
	
	/**
	 * Returns params
	 */
	Collection<Parameter> getParams() =>
	[
		new ParameterComponent
		{
			"name": "tag",
			"label": "Tag",
			"component": "Runtime.Widget.Select",
			"default": "text",
			"props": {
				"options": [
					{"key": "text", "value": "Text"},
					{"key": "h1", "value": "H1"},
					{"key": "h2", "value": "H2"},
					{"key": "h3", "value": "H3"},
					{"key": "h4", "value": "H4"},
				],
			}
		},
		new ParameterComponent
		{
			"name": "raw",
			"label": "Raw",
			"component": "Runtime.Widget.Select",
			"default": "false",
			"props": {
				"options": [
					{"key": "false", "value": "No"},
					{"key": "true", "value": "Yes"},
				],
			}
		},
		new ParameterComponent
		{
			"name": "content",
			"label": "Content",
			"component": "Runtime.Widget.TextEditable",
			"default": "Text",
			"props": {
				"direct_update": true,
			},
		},
	];
	
	
	/**
	 * Returns default template
	 */
	Dict<fn> getDefaultTemplate() =>
	{
	};
}