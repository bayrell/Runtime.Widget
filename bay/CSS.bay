.pr-2{ padding-right: calc(var(--widget-space) * 2); }
.pr-3{ padding-right: calc(var(--widget-space) * 3); }
.pr-4{ padding-right: calc(var(--widget-space) * 4); }
.pr-5{ padding-right: calc(var(--widget-space) * 5); }
.pt-1{ padding-top: var(--widget-space); }
.pt-2{ padding-top: calc(var(--widget-space) * 2); }
.pt-3{ padding-top: calc(var(--widget-space) * 3); }
.pt-4{ padding-top: calc(var(--widget-space) * 4); }
.pt-5{ padding-top: calc(var(--widget-space) * 5); }
.pb-1{ padding-bottom: var(--widget-space); }
.pb-2{ padding-bottom: calc(var(--widget-space) * 2); }
