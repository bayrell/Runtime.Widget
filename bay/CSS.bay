.p-3{ padding: calc(var(--widget-space) * 3); }
.p-4{ padding: calc(var(--widget-space) * 4); }
.p-5{ padding: calc(var(--widget-space) * 5); }
.pl-1{ padding-left: var(--widget-space); }
.pl-2{ padding-left: calc(var(--widget-space) * 2); }
