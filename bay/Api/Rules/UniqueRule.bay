namespace Runtime.Widget.Api.Rules;

use Runtime.Exceptions.ApiError;
use Runtime.Exceptions.FieldException;
use Runtime.ORM.Query;
use Runtime.ORM.Record;
use Runtime.Widget.Api.SaveApi;
use Runtime.Widget.Api.Rules.BaseRule;


class UniqueRule extends BaseRule
{
	string field_name = "";
	
	
	/**
	 * On save before
	 */
	async void onSaveBefore(SaveApi api)
	{
		Vector keys = api.relation.getPrimaryKeys();
		Query q = api.relation.select(keys)
			.where(this.field_name, "=", api.item.get(this.field_name));
		if (api.item.isUpdate())
		{
			Map pk = api.relation.getPrimaryKey(api.item.old());
			for (string key in pk.keys())
			{
				q.where(key, "!=", api.item.get(key));
			}
		}
		
		Map row = api.relation.fetch(q);
		if (row)
		{
			Map error = {};
			error.set(this.field_name, ["Must be unique"]);
			throw new ApiError(new FieldException({
				"fields": error,
			}));
		}
	}
}