namespace Runtime.Widget.Crud;

use Runtime.ModelProxy;
use Runtime.Web.BaseModel;
use Runtime.Web.BaseRoute;
use Runtime.Web.BaseWidget;
use Runtime.Web.RouteInfo;
use Runtime.Widget.Crud.CrudPageModel;
use Runtime.Widget.Crud.DeletePage;
use Runtime.Widget.Crud.SavePage;
use Runtime.Widget.Crud.TablePage;
use Runtime.Widget.Table.TableCrudModel;
use Runtime.Widget.Form.FormCrudModel;


class CrudRoute extends BaseRoute
{
	/**
	 * Returns routes
	 */
	pure Collection<RouteInfo> getRoutes() =>
	[
	];
	
	
	/**
	 * Returns layout name
	 */
	string getLayoutName() => "default";
	
	
	/**
	 * Returns page model
	 */
	string getPageModelName() => classof CrudPageModel;
	
	
	/**
	 * Setup crud widget
	 */
	Dict setupWidget(ModelProxy<BaseWidget> widget)
	{
		/* Setup route class */
		this.page_model.commit("setRouteClass", static::getClassName());
		
		/* Load widgets data */
		await this.page_model.commitAsync("setupWidgets");
		await this.page_model.commitAsync("loadWidgets");
	}
	
	
	/**
	 * Returns page title
	 */
	static string getPageTitle(BaseModel page_model, string action)
	{
		return null;
	}
	
	
	/**
	 * Action index
	 */
	async void actionIndex()
	{
		ModelProxy<TableCrudModel> widget = this.page_model.proxy(["widgets", "table"]);
		
		/* Add widgets */
		this.page_model.commit("addWidget", new TableCrudModel{ "widget_name": "table" });
		
		/* Setup widgets */
		await this.setupWidget(widget);
		
		/* Set title */
		this.setPageTitle( this.page_model.call("getPageTitle", this.getClassName(), "index") );
		
		/* Render page */
		this.container.render( classof TablePage );
	}
	
	
	/**
	 * Action save
	 */
	async void actionSave()
	{
		ModelProxy<FormCrudModel> widget = this.page_model.proxy(["widgets", "form"]);
		
		/* Add widgets */
		this.page_model.commit("addWidget", new FormCrudModel{ "widget_name": "form" });
		
		/* Setup widgets */
		await this.setupWidget(widget);
		
		/* Set title */
		this.setPageTitle( this.page_model.call("getPageTitle", this.getClassName(), "save") );
		
		/* Render page */
		this.container.render( classof SavePage );
	}
	
	
	/**
	 * Action delete
	 */
	async void actionDelete()
	{
		ModelProxy<FormCrudModel> widget = this.page_model.proxy(["widgets", "form"]);
		
		/* Add widgets */
		this.page_model.commit("addWidget", new FormCrudModel{ "widget_name": "form" });
		
		/* Setup widgets */
		this.setupWidget(widget);
		
		/* Set title */
		this.setPageTitle( this.page_model.call("getPageTitle", this.getClassName(), "delete") );
		
		/* Render page */
		this.container.render( classof DeletePage );
	}
}