class CrudApi extends BaseApi
{
	string action = "";
	int page = 0;
	int pages = 0;
	QueryResult items = null;
	Relation item = null;
	FieldResult field_result = new FieldResult();
	Map<QueryResult> dictionary = new Map;
	
	
	/**
	 * Returns api name
	 */
	pure string apiName() => "";
	
	
	/**
	 * Returns api methods
	 */
	pure string getApiMethod(string api_name)
	{
		return "";
	}
	
	
	/**
	 * Returns table name
	 */
	pure string getTableName() => "";
	
	
	/**
	 * Returns allowed fields
	 */
	Collection getAllowedFields(string kind)
	{
		if (kind == "save")
		{
			return this.getSaveFields();
		}
		if (kind == "item")
		{
			return this.getItemFields();
		}
		if (kind == "search")
		{
			return this.getSearchFields();
		}
		return [];
	}
	
	
	/**
	 * Returns search fields
	 */
	Collection getSearchFields() => this.getItemFields();
	
	
	/**
	 * Returns item fields
	 */
	Collection getItemFields() => [];
	
	
	/**
	 * Returns save fields
	 */
	Collection getSaveFields() => [];
	
	
	/**
	 * Returns database params
	 */
	Dict getDatabaseParams() => {};
	
	
	/**
	 * Returns database Connection
	 */
	Connection getDatabaseConnection()
	{
		Dict p = this.getDatabaseParams();
		string connection_name = p["name"];
		Connection conn = Connection::getConnection( connection_name );
		return conn;
	}
	
	
	/**
	 * Returns default limit
	 */
	int getDefaultLimit()
	{
		return 10;
	}
	
	
	/**
	 * Returns max limit
	 */
	int getMaxLimit()
	{
		return 100;
	}
	
	
	/**
	 * Returns page limit
	 */
	list getPageLimit()
	{
		int page = (int)(this.post_data["page"] |> default string 1);
		int limit = (int)(this.post_data["limit"] |> default string -1);
		int limit_default = this.getDefaultLimit();
		int limit_max = this.getMaxLimit();
		
		if (page <= 1) page = 1;
		if (limit < 0) limit = limit_default;
		if (limit > limit_max) limit = limit_max;
		
		return [page, limit];
	}
	
	
	/**
	 * Search init event
	 */
	async void onSearchInit()
	{
		Collection<CrudRule> rules = this.getRules();
		for (int i=0; i<rules.count(); i++)
		{
			CrudRule rule = rules[i];
			await rule.onSearchInit(this);
		}
	}
	
	
	/**
	 * Search final event
	 */
	async void onSearchFinal()
	{
		Collection<CrudRule> rules = this.getRules();
		for (int i=0; i<rules.count(); i++)
		{
			CrudRule rule = rules[i];
			await rule.onSearchFinal(this);
		}
	}
	
	
	/**
	 * Save init event
	 */
	async void onSaveInit()
	{
		Collection<CrudRule> rules = this.getRules();
		for (int i=0; i<rules.count(); i++)
