	/**
	 * Action item
	 */
	async void actionItem()
	{
		Dict pk = this.post_data["pk"];
		
		/* Init api */
		await this.initApi("actionItem");
		if (this.container.response.error_name != "") return;
		
		/* Before event */
		await this.onSearchInit();
		if (this.container.response.error_name != "") return;
		
		/* Find item */
		this.item = await this.findItem(pk);
		if (this.item == null)
		{
			this.container.fail( new ApiException("Item not found") );
			return ;
		}
		this.items = [ this.item ];
		
		/* Transform items */
		BaseStruct model = this.item.toDict( this.getAllowedFields("item") );
		Dict item_pk = this.item.getPrimaryKey();
		
		/* Set answer */
		this.container.success({
			"data":
			{
				"pk": item_pk,
				"item": model,
				"dictionary": {},
			}
		});
		
		/* After event */
		await this.onSearchFinal();
	}
	
	
	/**
	 * Create item
	 */
	async Relation createItem() => new Relation( this.getTableName() );
	
	
	/**
	 * Before update item event
	 */
	async void onSaveBefore(Relation item, Dict update_data)
	{
		Collection<CrudRule> rules = this.getRules();
		for (int i=0; i<rules.count(); i++)
		{
			CrudRule rule = rules[i];
			await rule.onSaveBefore(this, item, update_data);
		}
	}
	
	
	/**
	 * After update item event
	 */
	async void onSaveAfter(Relation item, Dict update_data)
	{
		Collection<CrudRule> rules = this.getRules();
		for (int i=0; i<rules.count(); i++)
		{
			CrudRule rule = rules[i];
			await rule.onSaveAfter(this, item, update_data);
		}
	}
	
	
	/**
	 * Update item
	 */
	async void updateItem(Relation item, Dict update_data)
	{
		Connection conn = this.getDatabaseConnection();
		Collection keys = update_data.keys();
		if (keys.count() > 0)
		{
			Collection items = this.getAllowedFields("save");
			
			for (int i=0; i<keys.count(); i++)
			{
				string field_name = keys[i];
				if (items.indexOf(field_name) >= 0)
				{
					item.set(field_name, update_data[field_name]);
				}
			}
			
			/* Before item */
			await this.onSaveBefore(item, update_data);
			if (this.container.response.error_name != "") return;
			if (not this.field_result.isSuccess())
			{
				this.container.fail( this.field_result.getResult() );
				return;
			}
			
			/* Save item */
			await item.save(conn);
			
			/* Refresh item */
			Dict pk = item.getPrimaryKey();
			item = await this.findItem(pk);
			
			/* Before item */
			await this.onSaveAfter(item, update_data);
		}
	}
	
	
	/**
	 * Validate item
	 */
	async Dict validateItem(Dict update_data)
	{
		Collection<CrudRule> rules = this.getRules();
		for (int i=0; i<rules.count(); i++)
		{
			CrudRule rule = rules[i];
			update_data = await rule.validateItem(this, update_data);
		}
		return update_data;
	}
	
	
	/**
	 * Action save
	 */
	async void actionSave()
	{
		Dict pk = this.post_data["pk"];
		Dict update_data = this.post_data["item"];
		
		/* Init api */
		await this.initApi("actionSave");
		if (this.container.response.error_name != "") return;
		
		/* Before event */
		await this.onSaveInit();
		if (this.container.response.error_name != "") return;
		
		/* Validate data */
		update_data = await this.validateItem(update_data);
		if (not this.field_result.isSuccess())
		{
			this.container.fail( this.field_result.getResult() );
			return;
		}
		if (this.container.response.error_name != "") return;
		
		/* Find item */
		if (pk != null)
		{
			this.item = await this.findItem(pk);
		}
		else
		{
			this.item = await this.createItem();
		}
		
		/* Item not found */
		if (this.item == null)
		{
			this.container.fail( new ApiException("Item not found") );
			return;
		}
		
		/* Update item */
		await this.updateItem(this.item, update_data);
		if (this.container.response.error_name != "") return;
		
		/* Transform items */
		BaseStruct model = this.item.toDict( this.getAllowedFields("item") );
		Dict item_pk = this.item.getPrimaryKey();
		
		/* Set api result */
		this.container.success({
			"data":
			{
				"pk": item_pk,
				"item": model,
				"dictionary": {},
			}
		});
		
		/* After event */
		await this.onSaveFinal();
	}
	
	
	/**
	 * Delete item
	 */
	async void deleteItem(Relation item)
	{
		Connection conn = this.getDatabaseConnection();
		item.delete(conn);
	}
	
	
