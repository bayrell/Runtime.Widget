<class name="Runtime.Widget.Button">


<style global="true">
.button{
	display: inline-flex;
	align-items: center;
	justify-content: center;
	color: var(--color-text);
	font-weight: 500;
	font-family: var(--font-family);
	font-size: var(--font-input-size);
	line-height: var(--line-height);
	text-decoration: none;
	background-color: var(--color-surface);
	border: var(--border-width) var(--color-border) solid;
	padding: calc(var(--space) * 0.75) calc(var(--space) * 1.5);
	outline: none;
	cursor: pointer;
	border-radius: var(--border-radius);
	transition: background-color var(--transition) ease-in-out,
		border-color var(--transition) ease-in-out,
		color var(--transition) ease-in-out;
	&:hover{
		box-shadow: 0 0 0 calc(var(--space) * 0.25) rgba(var(--color-primary-dark), 0.25);
	}
	&:active{
		box-shadow: inset 0px 2px 5px 0px rgba(0,0,0,0.25);
	}
}
.button--bold{
	font-weight: bold;
}
.button--small{
	padding: calc(var(--space) * 0.5) calc(var(--space) * 1);
	line-height: 1.2em;
}
.button--large{
	padding: calc(var(--space) * 1) calc(var(--space) * 2);
}
.button--primary{
	color: var(--color-primary-text);
	background-color: var(--color-primary);
	border-color: var(--color-primary-border);
	&:hover{
		background-color: var(--color-primary-hover);
		border-color: var(--color-primary-hover)
	}
}
.button--secondary{
	color: var(--color-secondary-text);
	background-color: var(--color-secondary);
	border-color: var(--color-secondary-border);
	&:hover{
		background-color: var(--color-secondary-hover);
		border-color: var(--color-secondary-hover);
	}
}
.button--outline{
	background-color: transparent;
	color: var(--color-text);
	border-color: var(--color-border);
	&:hover{
		background-color: var(--color-surface);
	}
}
.button--danger{
	color: var(--color-danger-text);
	background-color: var(--color-danger);
	border-color: var(--color-danger-border);
	&:hover{
		background-color: var(--color-danger-hover);
	}
}
.button--success{
	color: var(--color-success-text);
	background-color: var(--color-success);
	border-color: var(--color-success-border);
	&:hover{
		background-color: var(--color-success-hover);
	}
}
.button--info{
	color: var(--color-info-text);
	background-color: var(--color-info);
	border-color: var(--color-info-border);
	&:hover{
		background-color: var(--color-info-hover);
	}
}
.button--warning{
	background-color: var(--color-warning);
	border-color: var(--color-warning-border);
	&:hover{
		background-color: var(--color-warning-hover);
	}
}
.button--stretch{
	width: 100%;
}
</style>


<template>
	%if (this.href == null)
	{
		<button type={{ this.type }}
			class="button"
			class={{ rs::mergeStyles("button", this.styles) }}
			class={{ this.class }}
			@event:click={{ this.onClick }}
			@ref="widget"
		>
			%render this.renderSlot("default");
		</button>
	}
	%else
	{
		<a class="button" class={{ this.class }}
			class={{ rs::mergeStyles("button", this.styles) }}
			href={{ this.href }}
			target={{ this.target }}
			@event:click={{ this.onClick }}
			@ref="widget"
		>
			%render this.renderSlot("default");
		</a>
	}
</template>


<script>

props string type = "button";
props string target = "_self";
props string content = "";
props var href = null;
props Collection<string> styles = [];


/**
 * Button click
 */
void onClick(var e)
{
	e.stopPropagation();
}


</script>

</class>