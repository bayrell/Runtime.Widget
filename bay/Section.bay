<class name="Runtime.Widget.Section">

<use name="Runtime.Widget.BoolEnum" />

<style>
.section__wrap{
	max-width: var(--content-max-width);
	margin-left: auto;
	margin-right: auto;
	padding: 0px var(--padding-desktop);
	@media(max-width: 1000px)
	{
		padding: 0px var(--padding-tablet);
	}
	@media(max-width: 768px)
	{
		padding: 0px var(--padding-mobile);
	}
}
</style>


<template>
	%set Map attrs = this.getAttrs;
	<div class="section" class={{ this.class }} style={{ this.getStyle() }} ...attrs>
		%if (this.wrap == "true")
		{
			<div class="section__wrap" style={{ this.getWrapStyle() }}>
				%render this.renderSlot("default");
			</div>
		}
		%else
		{
			%render this.renderSlot("default");
		}
	</div>
</template>


<script>

props string id = "";
props string wrap = "true";
props string flex = "false";
props string align_items = "";
props string justify_content = "";
props string flex_wrap = "";
props string height = "";
props string min_height = "";


/**
 * Returns attrs
 */
computed Map getAttrs()
{
	Map attrs = {};
	if (this.id != "") attrs.set("id", this.id);
	return attrs;
}


/**
 * Returns styles
 */
string getStyle()
{
	Dict res = [];
	if (not this.wrap)
	{
		res.push(this.getWrapStyle());
	}
	return rs::join(";", res);
}


/**
 * Returns wrap style
 */
string getWrapStyle()
{
	Dict res = [];
	if (this.flex == "true")
	{
		res.push("display: flex;");
		if (this.align_items) res.push("align-items: " ~ this.align_items);
		if (this.justify_content) res.push("justify-content: " ~ this.justify_content);
		if (this.flex_wrap) res.push("flex-wrap: " ~ this.flex_wrap);
	}
	if (this.height) res.push("height: " ~ this.height);
	if (this.min_height) res.push("min-height: " ~ this.min_height);
	return rs::join(";", res);
}


/**
 * Returns widget params
 */
static Vector<Map> widgetParams() =>
[
	{
		"type": "param",
		"name": "wrap",
		"label": "Wrap",
		"component": "Runtime.Widget.Select",
		"default": "true",
		"props": {
			"options": [
				{"key": "false", "value": "No"},
				{"key": "true", "value": "Yes"},
			],
		},
	},
	{
		"type": "param",
		"name": "flex",
		"label": "Flex",
		"component": "Runtime.Widget.Select",
		"default": "false",
		"props": {
			"options": [
				{"key": "false", "value": "No"},
				{"key": "true", "value": "Yes"},
			],
		},
	}
];

</script>


</class>