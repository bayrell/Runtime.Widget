namespace Runtime.Widget.Table;

use Runtime.BaseModel;
use Runtime.Message;
use Runtime.Serializer.BaseType;
use Runtime.Serializer.MapType;
use Runtime.Serializer.ObjectType;
use Runtime.Serializer.VectorType;
use Runtime.Widget.Table.Table;


class TableModel extends BaseModel
{
	string component = classof Table;
	Vector<Map> items = [];
	BaseType item_type = null;
	
	
	/**
	 * Serialize object
	 */
	static void serialize(ObjectType rules)
	{
		parent(rules);
		rules.addType("items", new VectorType(rules.params ? rules.params.get("item_type") : null));
		rules.listener.add("setup", void (Message message){
			ObjectType rules = message.data.get("rules");
			TableModel model = message.data.get("item");
			model.item_type = rules.params ? rules.params.get("item_type") : null;
		});
	}
	
	
	/**
	 * Assign rules
	 */
	void assignRules(ObjectType rules)
	{
		parent(rules);
		this.item_type = rules.params.get("item_type");
	}
	
	
	/**
	 * Init params
	 */
	void initParams(Map params)
	{
		parent(params);
	}
	
	
	/**
	 * Set items
	 */
	void setItems(Vector items)
	{
		VectorType vector = new VectorType(this.item_type);
		this.items = vector.filter(items, []);
	}
}