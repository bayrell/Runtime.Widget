<class name="Runtime.Widget.Table.TableDialog" extends="Runtime.Widget.Dialog.Dialog">

<use name="Runtime.Widget.Button" component="true" />
<use name="Runtime.Widget.Table.Manager" />

<template name="renderTitle">
	%set string action = this.manager.getDialogAction();
	{{ this.manager.getDialogTitle(action) }}
</template>

<template name="renderContent">
	<div class="dialog__content">
	%if (this.manager.dialog_action == "save")
	{
		%render this.renderSlot("save");
	}
	%else
	{
		<div class="dialog__delete_message">{{ this.manager.getDialogTitle("delete_message") }}</div>
	}
	</div>
</template>

<template name="renderFooter">
	<div class="dialog__footer">
		%set string action = this.manager.getDialogAction();
		%if (action == "add")
		{
			<Button @event:click="this.manager.dialog.hide()">Cancel</Button>
			<Button @event:click="this.manager.onCreate()" class="button--primary">Create</Button>
		}
		%else if (action == "edit")
		{
			<Button @event:click="this.manager.dialog.hide()">Cancel</Button>
			<Button @event:click="this.manager.onSave()" class="button--primary">Save</Button>
		}
		%else if (action == "delete")
		{
			<Button @event:click="this.manager.dialog.hide()">Cancel</Button>
			<Button @event:click="this.manager.onDelete()" class="button--danger">Delete</Button>
		}
	</div>
</template>

<script>
props Manager manager = null;
</script>

</class>